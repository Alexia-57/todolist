    <table class="table table-bordered center">
      <tbody>
        <% @lists.each do |list| %>

          <% if list.completed %>
            <tr class="table-secondary">
            <!-- table-secondary is the bootstrap for grey out one row-->
              <td class="striker"><%= link_to list.description, edit_list_path(list) %><% list.description %></td>
              <td>
                <%= form_with(model: list) do |form| %>
                <%= form.text_field :description, type: 'hidden' %>
                <%= form.check_box :completed, :checked => false, :style => 'visibility: hidden' %>
                <%= form.submit "Uncheck", class: 'btn btn-outline-secondary btn-sm' %>
                <% end %>
              <td>
                <% link_to "Show", list %>
                <% link_to "Edit", edit_list_path(list) %>
                <!-- remode = from %= and it won't appear on page-->
                <%= link_to "Delete", list, class: 'btn btn-outline-secondary btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>
            </tr>
          <% else %>
            <tr>
              <td><%= link_to list.description, edit_list_path(list) %><% list.description %></td>
              <td>
                <%= form_with(model: list) do |form| %>
                <%= form.text_field :description, type: 'hidden' %>
                <%= form.check_box :completed, :checked => true, :style => 'visibility: hidden' %>
                <%= form.submit "Check", class: 'btn btn-outline-secondary btn-sm' %>
                <% end %>
              
              </td>
              <td>
                <% link_to "Show", list %>
                <% link_to "Edit", edit_list_path(list) %>
                <%= link_to "Delete", list, class: 'btn btn-outline-secondary btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>
          </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>

    <div style="font-size: 85%; color:#808080">
    <%= link_to 'Delete Marked Items', home_trash_em_path, method: :delete, data: { confirm: "Are you sure?" }%>
    <%= link_to '| Delete All Items', home_trash_em_all_path, method: :delete, data: { confirm: "Are you sure?" } %>
    </div>


